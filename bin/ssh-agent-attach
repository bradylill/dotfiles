#!/bin/bash

auth_sock=$(find /tmp/ssh-* -uid $(id -u) | rg agent | xargs ls -l --time-style=long-iso | awk '{ print $6, $7, $8 }' | sort | fzf | awk '{ print $3 }')
pid=$(echo $auth_sock | cut -d '.' -f2)
pid=$(( $pid + 1 ))

SSH_AUTH_SOCK=$auth_sock; export SSH_AUTH_SOCK
SSH_AGENT_PID=$pid; export SSH_AGENT_PID
